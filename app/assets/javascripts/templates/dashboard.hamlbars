%h2 Projects

%ul.projects
  {{#each project in controller}}
  %li
    {{#linkTo 'project' project class="project" }}{{project.name}}{{/linkTo}}
  {{else}}
  %li.zero {{ t projects.index.zero }}
  {{/each}}

{{#view Trakio.CreateProjectButtonView }}
%a.button.create{href: "#"}
  {{ t projects.create_button }}
{{/view}}
{{view Trakio.ProjectNewView contentBinding="this"}}